<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Menu_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/foraneoImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:focusable="true"/>
        <!--android:src=""Se le pondrá cuando se tenga un icono-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/grisClaro"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="@string/mensajeMenu"/>

        <GridView
            android:layout_width="370dp"
            android:layout_height="250dp"
            android:columnCount="2"
            android:rowCount="2">

            <ImageView
                android:id="@+id/imgUbicacion"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/ic_baseline_location_on_24"
                android:clickable="true"
                android:focusable="true"/>
            <!--Se pondrá el icono ese raro mientras alguien mete las imagenes-->
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/ubicacionMenu"/>

        </GridView>
    </LinearLayout>


</LinearLayout>