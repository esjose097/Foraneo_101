<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreen">

    <!--Linear con las figuras de arriba-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circulo1"
            android:layout_width="181dp"
            android:layout_height="245dp"
            android:paddingLeft="-200px"
            android:paddingTop="-800px"
            android:layout_marginTop="-110px"
            app:srcCompat="@drawable/ic_circulo" />

        <ImageView
            android:layout_width="181dp"
            android:layout_height="150dp"
            android:rotation="90"
            app:srcCompat="@drawable/ic_triangulo"
            android:layout_marginTop="-10dp"
            app:tint="@color/morado" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="181dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_star"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="110dp"/>
    </LinearLayout>

    <!-- Espacio para el logo-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:src="@drawable/foraneosplash"
        android:background="@drawable/backrepeat"
        />


    <!-- Linear con las figuras de abajo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="295dp"
            android:paddingLeft="-170px"
            android:paddingTop="300px"
            android:layout_marginTop="-110px"
            app:srcCompat="@drawable/ic_circulo"
            app:tint="@color/naranja" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/rosa"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="-70dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/rojo"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"/>

    </LinearLayout>







</LinearLayout>